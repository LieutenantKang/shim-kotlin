<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context="co.shimm.app.view.activity.counselor.CounselorActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/counselor_thumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/counselor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sample Name"
        android:textColor="#FFFFFF"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintTop_toBottomOf="@id/counselor_thumbnail"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/counselor_career"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:text="Sample Education"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/counselor_name"/>

    <TextView
        android:id="@+id/counselor_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:text="Sample Description"
        android:textColor="#FFFFFF"
        android:maxLines="6"
        android:ellipsize="end"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/counselor_career"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/counselor_apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/darkBlue"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp"
        android:text="상담 신청하기"
        android:textColor="#FFFFFF"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_marginBottom="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
